module source.corecollector.logging;

import hunt.logging;

/// Setup the logging with the supplied logging level.
void setupLogging(const LogLevel l) {
    LogConf conf;
    conf.disableConsole = false;
    conf.level = l;
    logLoadConf(conf);
}